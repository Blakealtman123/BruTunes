<h1>
	<%= @artist.name %>
</h1>

	<img src= <%= @artist.picture %> , height="300px" >
	<br/>
	<br/>
	<strong>Artist Bio:</strong>
	<%= @artist.bio %>
	<br/>
	<br/>
<strong>
	<% @artist.albums.each do |album| %>
	Album:
	<%= link_to album.name , album_path(album) %>
		<br/>
		<% album.songs.each do |song| %>
			<%= link_to song.name , song_path(song) %>
			<br/>
		<% end %>
	<% end %>
	<br/>
	Likes: <%= @artist.likes %>
		<%= link_to 'upvote' , like_artist_path(@artist) %>
	<br/>
	<h3><%= link_to 'Home' , root_path %> | <%= link_to 'All Artists' , artists_path %></h3>
</strong>
